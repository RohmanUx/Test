{
  "compilerOptions": {
    "target": "esnext",                             // Specify ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"],       // Use libraries for DOM, iterable, and ESNext
    "allowJs": true,                                // Allow JavaScript files
    "skipLibCheck": true,                           // Skip type checking of declaration files
    "strict": true,                                 // Enable all strict type-checking options
    "noEmit": true,                                 // Don't emit any files (useful for Next.js)
    "esModuleInterop": true,                        // Allow default imports from non-ES modules
    "module": "esnext",                             // Use the ESNext module system
    "moduleResolution": "node",                     // Use Node.js module resolution
    "resolveJsonModule": true,                      // Allow importing JSON modules
    "isolatedModules": true,                        // Ensure each file can be safely transpiled
    "jsx": "preserve",                              // Preserve JSX in .tsx files for Next.js
    "incremental": true,                            // Enable faster subsequent builds with incremental compilation
    "baseUrl": ".",                                 // Base URL for module resolution
    "paths": {
      "@/*": ["src/*"]                              // Alias for resolving modules in "src"
    },
    "types": ["node", "jest"],                      // Include node and jest types (if testing)
    "forceConsistentCasingInFileNames": true        // Ensure consistent file casing
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]      // Exclude unnecessary directories
}
